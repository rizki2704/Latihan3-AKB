<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_three"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".BiodataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kodekeluarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/rubik_regular"
                android:text="Nama Panggilan Kamu"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etnama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kodekeluarga"
                android:layout_marginTop="20dp"
                android:hint="Contoh : Budi"
                android:paddingBottom="20dp" />

            <TextView
                android:id="@+id/umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etnama"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_regular"
                android:text="Umur Kamu"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etumur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/umur"
                android:layout_marginTop="20dp"
                android:hint="Contoh : 12"
                android:inputType="number"
                android:paddingBottom="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white_three"
            android:padding="30dp">

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_button"
                android:onClick="moveHome"
                android:text="Selanjutnya"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>